classDiagram
    note "Vue Administrateur : SaaS, Gestion Club & CMS"

    %% --- ACTEURS ---
    class User {
        +String email
        +String password
        +List<Role> roles
        +login()
    }

    class Dirigeant {
        +manageUsers()
        +configureClub()
        +manageSubscription()
        +customizeLandingPage()
    }

    class SuperAdmin {
        +validateClubRegistration(RegistrationRequest)
        +managePlans()
        +viewGlobalMetrics()
    }

    %% --- GESTION SAAS (Abonnements & Inscription) ---
    class RegistrationRequest {
        +String clubName
        +String adminEmail
        +String status
        +Date requestDate
        +submit()
        +validate()
    }

    class Plan {
        +String name
        +Decimal price
        +int maxUsers
        +List<String> features
    }

    class Subscription {
        +Date startDate
        +Date endDate
        +Boolean isActive
        +renew()
        +upgrade(Plan)
    }

    %% --- DOMAINE CLUB ---
    class Club {
        +String name
        +String logoUrl
        +String primaryColor
        +List<Category> categories
        +updateSettings()
    }

    %% --- CMS / FRONT OFFICE (Landing Page) ---
    class LandingPageSettings {
        +String heroTitle
        +String heroImageUrl
        +String footerText
        +List<NavbarLink> navbarLinks
        +List<ContentSection> contentSections
        +publish()
    }

    class NavbarLink {
        +String label
        +String url
        +int order
    }

    class ContentSection {
        +String title
        +String body
        +String type
    }

    %% --- FONCTIONNALITÉS EXISTANTES ---
    class FunctionalRequirement {
        +String id
        +String title
        +String description
        +int likes
        +int dislikes
        +Enum status
        +vote(type)
    }

    class RoleManagement {
        +assignRole(User, Role)
        +revokeRole(User, Role)
    }

    %% --- RELATIONS ---
    
    %% Héritage
    Dirigeant --|> User : hérite
    SuperAdmin --|> User : hérite

    %% SaaS Flow (Inscription & Validation)
    SuperAdmin ..> RegistrationRequest : valide
    RegistrationRequest ..> Club : instancie (si validé)
    Club "1" -- "1" Subscription : souscrit
    Subscription "1" -- "1" Plan : basé sur

    %% Club Management (Back Office)
    Club "1" -- "1..*" Dirigeant : géré par
    Dirigeant "1" ..> "1..*" User : administre
    Dirigeant ..> RoleManagement : utilise
    Dirigeant ..> FunctionalRequirement : priorise

    %% CMS / Landing Page (Front Office)
    Club "1" *-- "1" LandingPageSettings : possède
    LandingPageSettings *-- "*" NavbarLink : contient
    LandingPageSettings *-- "*" ContentSection : contient
    Dirigeant ..> LandingPageSettings : configure (Back Office)